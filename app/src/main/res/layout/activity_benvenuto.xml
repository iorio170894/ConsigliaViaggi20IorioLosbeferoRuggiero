<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    tools:context=".ActivityBenvenuto" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <include
            layout="@layout/main_toolbar"/>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@color/colorPrimaryDark"
            android:orientation="vertical"
            android:padding="50dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="-2dp"
            tools:layout_editor_absoluteY="-6dp">

            <Button
                android:id="@+id/buttonRicercaStrutturaBenvenuto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:background="@drawable/buttonsstyle2"
                android:drawableLeft="@drawable/ic_baseline_search_24"
                android:text="Ricerca Struttura"
                android:textColor="@color/white"
                android:textSize="23dp" />


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:text="Intorno a te:"
            android:id="@+id/intorno_a_te"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.104"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.44" />

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal"
            android:padding="30dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="-6dp"
            tools:layout_editor_absoluteY="-6dp">

            <Button
                android:id="@+id/buttonSearchRistoranti"
                android:layout_width="151dp"
                android:layout_height="70dp"
                android:gravity="center"
                android:layout_marginTop="50dp"
                android:background="@drawable/buttonstylepink"
                android:drawableLeft="@drawable/ic_baseline_restaurant_24"
                android:text="Ristoranti"
                android:textColor="@color/white"
                android:textSize="17dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.175"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.63"
                />

            <Button
                android:id="@+id/buttonSearchBar"
                android:layout_width="151dp"
                android:layout_marginLeft="20dp"
                android:layout_height="70dp"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:background="@drawable/buttonstylepink"
                android:drawableLeft="@drawable/ic_baseline_local_bar_24"
                android:text="Bar"
                android:textColor="@color/white"
                android:textSize="17dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.877"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.63" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="30dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="-6dp"
            tools:layout_editor_absoluteY="-6dp">

            <Button
                android:layout_marginBottom="50dp"
                android:id="@+id/buttonSearchHotel"
                android:layout_width="151dp"
                android:gravity="center"
                android:layout_height="70dp"
                android:background="@drawable/buttonstylepink"
                android:drawableLeft="@drawable/ic_baseline_hotel_24"
                android:text="Hotel"
                android:textColor="@color/white"
                android:textSize="17dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.176"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.89"
                />

            <Button
                android:layout_marginBottom="50dp"
                android:id="@+id/buttonSearchParchi"
                android:layout_width="151dp"
                android:layout_height="70dp"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:background="@drawable/buttonstylepink"
                android:drawableLeft="@drawable/ic_baseline_nature_people_24"
                android:text="Parchi"
                android:textColor="@color/white"
                android:textSize="17dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.877"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.89" />

        </LinearLayout>







    </LinearLayout>

    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/background_light">

    <include
        layout="@layout/activity_nav_drawer"/>
    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>