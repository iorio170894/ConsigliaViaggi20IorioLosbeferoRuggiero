<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical"
        android:padding="50dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="-11dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome"
            android:textColor="#fff"
            android:textSize="50sp"
            tools:layout_editor_absoluteX="39dp"
            tools:layout_editor_absoluteY="-12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" ConsigliaViaggi20 app"
            android:textColor="#fff"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="43dp"
            tools:layout_editor_absoluteY="91dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/ButtonReg"
        style="@android:style/Widget.Material.Light.Button.Inset"
        android:layout_width="208dp"
        android:layout_height="47dp"
        android:background="@drawable/buttonstylepink"
        android:text="Registrati"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.635"
        android:drawableRight="@drawable/ic_baseline_person_add_24"/>

    <Button
        android:id="@+id/buttonOspite"
        style="@android:style/Widget.Material.Light.Button.Inset"
        android:layout_width="208dp"
        android:layout_height="51dp"
        android:background="@drawable/buttonstylepink"
        android:text="Continua come Ospite"
        android:textColor="@color/white"
        android:textSize="13dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.786"
        android:drawableRight="@drawable/ic_baseline_person_outline_24"/>

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="208dp"
        android:layout_height="50dp"
        android:background="@drawable/buttonstylepink"
        android:text="Login"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.486"
        android:drawableRight="@drawable/ic_baseline_send_24"/>

</androidx.constraintlayout.widget.ConstraintLayout>